<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:visibility="gone"
        android:orientation="vertical"
        android:id="@+id/layout_pergunta_tam">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1 - Insira o tamanho da área potencialmente contaminada."
            android:id="@+id/pergunta_tam"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/tamanho"
                android:inputType="numberDecimal"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="m²"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/layout_default"
        android:layout_weight="1">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/pergunta"/>
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/resp_primaria">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sim"
                android:layout_weight="1"
                android:id="@+id/sim"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Não"
                android:layout_weight="1"
                android:id="@+id/nao"/>
        </RadioGroup>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Qual intensidade?"
            android:id="@+id/pergunta_secundaria"
            android:visibility="gone"/>
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/resp_secundaria"
            android:visibility="gone">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Muito"
                android:layout_weight="1"
                android:id="@+id/muito"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pouco"
                android:layout_weight="1"
                android:id="@+id/pouco"/>
        </RadioGroup>
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            style="@style/ButtonStyle"
            android:id="@+id/botaoAnt"
            android:text="Anterior"/>
        <Button
            style="@style/ButtonStyle"
            android:id="@+id/botaoProx"
            android:text="Próximo"
            android:layout_gravity="right"/>
        <Button
            style="@style/ButtonStyle"
            android:id="@+id/botaoFinalizar"
            android:text="Finalizar"
            android:layout_gravity="right"
            android:visibility="gone"/>
    </FrameLayout>
</LinearLayout>